<Window x:Class="PLCDxfGcodeApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="PLC DXF G-Code Application" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="300"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel: File Operations -->
        <StackPanel Grid.Column="0" Margin="10" Background="White" VerticalAlignment="Top">
            <TextBlock Text="File Operations" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <Button Content="Open DXF File" Padding="10" Margin="0,5" Click="OpenDxfFile_Click"/>
            <Button Content="Save G-Code" Padding="10" Margin="0,5" Click="SaveGCode_Click"/>
            <Button Content="New File" Padding="10" Margin="0,5" Click="NewFile_Click"/>
            
            <Separator Margin="0,10"/>
            
            <TextBlock Text="PLC Connection" FontSize="14" FontWeight="Bold" Margin="0,10,0,10"/>
            <TextBlock Text="IP Address:" Margin="0,5"/>
            <TextBox x:Name="PLCIpTextBox" Padding="5" Text="192.168.1.100"/>
            
            <TextBlock Text="Rack:" Margin="0,10,0,5"/>
            <TextBox x:Name="PLCRackTextBox" Padding="5" Text="0"/>
            
            <TextBlock Text="Slot:" Margin="0,10,0,5"/>
            <TextBox x:Name="PLCSlotTextBox" Padding="5" Text="1"/>
            
            <Button Content="Connect to PLC" Padding="10" Margin="0,15" Click="ConnectToPLC_Click"/>
            <TextBlock x:Name="ConnectionStatus" Text="Status: Disconnected" Margin="0,5" Foreground="Red"/>
        </StackPanel>

        <!-- Center Panel: DXF Viewer -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="DXF Editor" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <Border BorderBrush="Black" BorderThickness="1" Background="White" Height="600">
                <Canvas x:Name="DxfCanvas" Background="White"/>
            </Border>
            <TextBlock x:Name="DxfInfoTextBlock" Text="No file loaded" Margin="0,10" Foreground="Gray"/>
        </StackPanel>

        <!-- Right Panel: G-Code Generation -->
        <StackPanel Grid.Column="2" Margin="10" Background="White" VerticalAlignment="Stretch">
            <TextBlock Text="G-Code Settings" FontSize="14" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <TextBlock Text="Feed Rate (mm/min):" Margin="0,5"/>
            <TextBox x:Name="FeedRateTextBox" Padding="5" Text="100"/>
            
            <TextBlock Text="Spindle Speed (RPM):" Margin="0,10,0,5"/>
            <TextBox x:Name="SpindleSpeedTextBox" Padding="5" Text="1000"/>
            
            <TextBlock Text="Tool Diameter (mm):" Margin="0,10,0,5"/>
            <TextBox x:Name="ToolDiameterTextBox" Padding="5" Text="3"/>
            
            <Button Content="Generate G-Code" Padding="10" Margin="0,15" Click="GenerateGCode_Click"/>
            
            <Separator Margin="0,10"/>
            
            <TextBlock Text="G-Code Preview:" FontSize="12" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBox x:Name="GCodeTextBox" Padding="5" Height="400" VerticalAlignment="Stretch" 
                     AcceptsReturn="True" IsReadOnly="True" VerticalScrollBarVisibility="Auto" 
                     FontFamily="Courier New" FontSize="10"/>
        </StackPanel>
    </Grid>
</Window>
